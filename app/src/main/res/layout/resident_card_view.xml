<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_resident"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="3dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:tag=""

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            >

            <TextView
                android:id="@+id/resident_card_address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Street name"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                />

            <TextView

                android:id="@+id/resident_card_apartment_text"
                android:layout_toEndOf="@id/resident_card_address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APT: 5"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@id/resident_card_address_text"
                android:id="@+id/resident_card_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Firstname Lastname"
                android:layout_marginLeft="10dp"
                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>